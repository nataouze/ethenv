{
    "name": "ethenv",
    "version": "0.0.5",
    "description": "Cross-connectivity environment for javascript Ethereum clients.",
    "main": "dist/index.js",
    "repository": "git@github.com:nataouze/ethenv.git",
    "author": "nataouze",
    "license": "MIT",
    "scripts": {
        "doc": "typedoc",
        "lint:fix": "prettier --write src/**/*.ts test/**/*.ts && tslint --fix --config tslint.json --project tsconfig.json",
        "lint": "tslint --config tslint.json --project tsconfig.json",
        "prettier": "prettier --write {src,test,typings}/**/*.ts",
        "test": "cross-env TS_NODE_PROJECT=\"tsconfig.json\" mocha -r ts-node/register -r source-map-support/register --timeout 20000 --recursive test/**/*.test.ts --exit",
        "build": "tsc",
        "watch": "tsc -w",
        "prepack": "rm -rf dist docs && npm run lint:fix && npm run test && npm run build && npm run doc",
        "publish:next": "npm publish --tag next",
        "publish:release": "npm publish"
    },
    "dependencies": {
        "async-mutex": "^0.2.4",
        "lodash.merge": "^4.6.2",
        "web3": "=1.0.0-beta.55"
    },
    "optionalDependencies": {
        "cross-fetch": "^3.0.5"
    },
    "devDependencies": {
        "@nomiclabs/buidler": "^1.3.0",
        "@types/chai": "^4.2.12",
        "@types/chai-as-promised": "^7.1.3",
        "@types/lodash.isequal": "^4.5.5",
        "@types/lodash.merge": "^4.6.6",
        "@types/mocha": "^8.0.0",
        "buidler-deploy": "^0.5.4",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cross-env": "^7.0.2",
        "http-server": "^0.12.3",
        "lodash.isequal": "^4.5.0",
        "mocha": "^8.0.1",
        "mochawesome": "^6.1.1",
        "prettier": "^2.0.5",
        "source-map-support": "^0.5.19",
        "ts-node": "^8.10.2",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.3.0",
        "typedoc": "^0.17.8",
        "typescript": "^3.9.7",
        "web3-core": "=1.0.0-beta.55",
        "web3-eth-contract": "=1.0.0-beta.55",
        "web3-providers": "=1.0.0-beta.55",
        "web3-utils": "=1.0.0-beta.55"
    }
}
